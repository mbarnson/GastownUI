<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow hardened runtime to load unsigned libraries (for Tauri plugins) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow hardened runtime to use JIT compilation (for V8/JavaScript) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Network access for API calls and web content -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for reading/writing user files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Access to user's Downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Microphone access for voice features -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Camera access (for future LFM2.5-Vision features) -->
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- Accessibility access (for automation features) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
</dict>
</plist>
