{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gastownui",
  "version": "0.1.0",
  "identifier": "com.gastownui.app",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "GastownUI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "release": "1",
        "epoch": "0"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "category": "Development",
    "shortDescription": "Cross-platform GUI for Gas Town agent orchestration",
    "longDescription": "GastownUI provides a visual interface for managing Gas Town multi-agent orchestration system. Features voice control, real-time monitoring, and tmux session management."
  }
}
